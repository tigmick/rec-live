<div class="container-fluid">
  <div class="row">
    <%= render 'shared/navigation' %>
    <div class="col-md-10" id="content-container" style="background-color:#f1f1f1;">
      <div class="job-right reportse" style="padding: 34px;">

        <div class="box-job job-report-box">
          <ul>
            <li style="min-width: 232px; width: 0% !important">
              <div class="equal-height">
                <div class="box-heading">

                  <div class="report bo">
                    <span><%= @jobs.where(status: 0).count %></span>
                  </div>
                </div>
                <div class="hori-divi"></div>
                Live Vacancies
              </div>
            </li>
            <li style="min-width: 232px; width: 0% !important">
              <div class="equal-height">
                <div class="box-heading">

                  <div class="report redr">
                    <i class="fas fa-long-arrow-alt-up grey"></i><span><%= calculate_average_time(@jobs) %></span><i class="fas fa-long-arrow-alt-down red"></i>
                  </div>
                </div>
                <div class="hori-divi"></div>
                Avarage time to Offer
              </div>
            </li>
            <li style="min-width: 232px; width: 0% !important">
              <div class="equal-height">
                <div class="box-heading">

                  <div class="report green">
                    <i class="fas fa-long-arrow-alt-up green"></i><span><%= @jobs.where(status: 0).count %>:<%= rejected_jobs(@jobs) %></span>
                    <!--<i class="fas fa-long-arrow-alt-down grey"></i>-->
                  </div>
                </div>
                <div class="hori-divi"></div>
                Drop Out Ratio's
              </div>
            </li>
            <li style="min-width: 232px; width: 0% !important">
              <div class="equal-height">
                <div class="box-heading">

                  <div class="report bo">
                    <span><%= @jobs.count %></span>
                  </div>
                </div>
                <div class="hori-divi"></div>
                Vacancies filed this year
              </div>
            </li>
          </ul>
        </div>
        <div class="reporttable">
          <table>
            <tr>
              <th>Roles</th>
              <th>Number of Candidates</th>
              <th>1st Round</th>
              <th>2nd Round</th>
              <th>3rd Round</th>
              <th>Offer</th>
            </tr>
            <% @jobs.where(status: 0).each do |job| %>
              <tr>
                <td><%= job.title %></td>
                <td><%= job.candidates.count %></td>
                <td><%= job.interview_schedules.where(stage: 1).count %></td>
                <td><%= job.interview_schedules.where(stage: 2).count %></td>
                <td><%= job.interview_schedules.where(stage: 3).count %></td>
                <td><%= job.candidate_applications.where(accepted: true).count %></td>
              </tr>
            <% end %>
          </table>
        </div>

        <div class="reporttable tab2" style="display: none;">
          <table>
            <tr>
              <th>Interviwers</th>
              <th>Pass</th>
              <th>Rejected</th>
              <th>Notes</th>
            </tr>
            <% @jobs.where(status: 0).each do |job| %>
              <% comment = job.interview_schedules.first.client_comments.first rescue ''%>
              <tr>
                <td><%= job.user.full_name  %></td>
                <td><%= job.user.full_name %></td>
                <td><%= job.user.full_name %></td>
                <td><%= (comment.present? ? comment.comment : '') %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

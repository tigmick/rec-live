<div class="container-fluid">
<div class="row">
<%= render 'shared/navigation' %>
<div class="col-md-10" id="content-container" style="background-color:#f1f1f1; margin-bottom: 50px;">
   <div class="create-job">
      <h2>new job</h2>
      <%= form_for(@job, :html => { :multipart => true }) do |f| %>
      <% if @job.errors.any? %>
      <div id="error_explanation">
         <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
         <ul>
            <% @job.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
         </ul>
      </div>
      <% end %>
      <div class="form-group title">
         <%= f.text_field :title, class: 'form-control',required: true,placeholder: "Title" %>
      </div>
      <div class="form-group">
         <%= f.text_area :description, rows: "5", required: true,class: 'form-control', placeholder: 'Description' %>
      </div>
      <div class="box__input">
         <%= f.file_field :document, required: true,class:"box__file" %>
         <label for="file">
           <%= image_tag "/assets/new_ui/Shape.png", class:"img-fluid", alt:"drag" %>&nbsp;&nbsp; <span id="resume-label">Browse</span>
         </label>
      </div>
      <div class="form-group">
         <%#= f.label :industry_id %><br>
         <%= f.select("industry_id", Industry.all.collect {|p| [ p.title, p.id ] }, {}, class: "form-control", id: 'sel1')  %>
      </div>
      <div class="actions">
         <%= f.submit class: 'btn' %>
      </div>
      <% end %>
   </div>
</div>
</div>
</div>
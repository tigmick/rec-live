<p>
  <% @candidates = User.where(:role=> "candidate")%>
  <table>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email </th>
        <th colspan=2>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @candidates.each do |candidate|%>
      <tr>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.email %></td>
        <td><%= link_to "view","/admin/users/#{candidate.id}"%> 
	<td><%= link_to "Jobs Applied", admin_candidate_jobs_path(candidate) %></td>
      </tr>
      <% end %>
    </tbody>
      
  </table>
</p>
